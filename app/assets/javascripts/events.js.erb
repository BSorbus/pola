$(document).ready(function() {
  var oEventtable = $('#events-table').DataTable({
    colReorder: true,
    dom: 'lBfrtip',
    buttons: [
      'copy', 'csv', 'pdf', 'colvis', 'event_button_only_my_data', 'event_button_filter_show_hide'
    ],
    responsive: true,
    processing: true,
    serverSide: true,
    deferRender: true,
    ajax: { 
      url: $('#events-table').data('source'),
      type: "POST",
      data: function(d){
        d.eager_filter_for_current_user = $('#events-table').DataTable().button(3).active();
      },
      error: function (jqXHR, exception) {
        console.log(jqXHR);
        if (jqXHR.status == 401) {
          window.location.reload();
        } else {
          getErrorMessage(jqXHR, exception);
        }
      }
    },
    pagingType: "full_numbers",
    lengthMenu: [[10, 15, 25, 50, 100, -1], [10, 15, 25, 50, 100, "Wszystkie"]],
    columns: [
      { "data": "id",
        "visible": false },
      { "data": "title" }, 
      { "data": "type" },
      { "data": "errand" },
      { "data": "project" },
      { "data": "customer" },
      { "data": "end_date" },
      { "data": "status" },
      { "data": "effect" },
      { "data": "updated_at" },
      { "data": "attachments_count" },
      { "data": "flat", 
        "sortable": false }
    ],
    order: [[ 6, "desc" ]],
    language: {
      buttons: {
        copy: 'Kopiuj',
        colvis: 'Kolumny'
      },
      url: '<%= asset_path("pl.json.erb") %>'
    },


  });


  //$('input.global_filter').on( 'keyup click', function () {
  //  filterGlobalParams();
  //});

  $('input.column_filter').on( 'keyup click', function () {
    filterColumnParams( $(this).attr('data-column') );
  });

  $('select.column_filter').on( 'keyup click', function () {
    filterColumnParams( $(this).attr('data-column') );
  });

});