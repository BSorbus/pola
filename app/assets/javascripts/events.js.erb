$(document).ready(function() {
  var oEventtable = $('#events-table').DataTable({
    colReorder: true,
    dom: 'lBfrtip',
    buttons: [
      'copy', 'csv', 'pdf', 'colvis'
    ],
    responsive: true,
    processing: true,
    serverSide: true,
    deferRender: true,
    ajax: { 
      url: $('#events-table').data('source'),
      type: "GET",
      error: function (jqXHR, exception) {
        console.log(jqXHR);
        if (jqXHR.status == 401) {
          window.location.reload();
        } else {
          getErrorMessage(jqXHR, exception);
        }
      }
    },
    pagingType: "full_numbers",
    lengthMenu: [[10, 15, 25, 50, 100, -1], [10, 15, 25, 50, 100, "Wszystkie"]],
    columns: [
      { "data": "id",
        "visible": false }, 
      { "data": "title" }, 
      { "data": "type" },
      { "data": "errand"},
      { "data": "project"},
      { "data": "end_date"},
      { "data": "status"},
      { "data": "effect"},
      { "data": "flat", 
        "sortable": false }
    ],
    order: [[ 1, "asc" ]],
    language: {
      buttons: {
        copy: 'Kopiuj',
        colvis: 'Kolumny'
      },
      url: '<%= asset_path("pl.json.erb") %>'
    }
  });


});