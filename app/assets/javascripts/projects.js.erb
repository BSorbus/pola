$(document).ready(function() {
  $('.select2project').select2({
    minimumInputLength: 1,
    allowClear: false,
    ajax: {
      url: "/projects/select2_index.json",
      dataType: 'json',
      quietMillis: 250,
      type: 'GET',
      data: function(term, page) {
        return {
          q: term,
          page_limit: 10,
          page: page
        };
      },
      results: function(data, page) {
        //var more = (page * 10) < data.total_count;
        var more = (page * 10) < data.meta.total_count;
        var projects = $.map(data.projects, function(project, i) {
          return { id: project.id, text: project.fullname };
        });
        return { results: projects, more: more };
      }
    },
    formatAjaxError: function(jqXHR, textStatus, errorThrown) {
      console.log(jqXHR);
      if (jqXHR.status == 401) {
        window.location.reload();
      } else {
        getErrorMessage(jqXHR, jqXHR.status);
      }
      return errorThrown + " " + jqXHR.responseText;
    },
    initSelection: function(element, callback) {
      var id=$(element).val();
      if (id!=="") {
        $.get("/projects/"+id+".json", function(data_from_json) {
          if(data_from_json)
            callback({ id: data_from_json.id, text: data_from_json.fullname });
        });
      }
    },
    dropdownCssClass: "bigdrop"
  });



  var oProjecttable = $('#projects-table').DataTable({
    colReorder: true,
    dom: 'lBfrtip',
    buttons: [
      'copy', 'csv', 'pdf', 'colvis', 'project_button_only_my_data'
    ],
    responsive: true,
    processing: true,
    serverSide: true,
    //deferRender: true,
    searchDelay: 500,
    ajax: { 
      url: $('#projects-table').data('source'),
      type: "GET",
      data: function(d){
        d.eager_filter_for_current_user = $('#projects-table').DataTable().button(3).active();
      },
      error: function (jqXHR, exception) {
        console.log(jqXHR);
        if (jqXHR.status == 401) {
          window.location.reload();
        } else {
          getErrorMessage(jqXHR, exception);
        }
      }
    },
    pagingType: "full_numbers",
    lengthMenu: [[10, 15, 25, 50, 100, -1], [10, 15, 25, 50, 100, "Wszystkie"]],
    columns: [
      { "data": "id",
        "visible": false }, 
      { "data": "number" }, 
      { "data": "enrollment" },
      { "data": "status" },
      { "data": "note" },
      { "data": "customer" },
      { "data": "flat", 
        "sortable": false }
    ],
    order: [[ 1, "asc" ]],
    language: {
      buttons: {
        copy: 'Kopiuj',
        colvis: 'Kolumny'
      },
      url: '<%= asset_path("pl.json.erb") %>'
    }
  });
 

  var oCustomerProjectstable = $('#customer-projects-table').DataTable({
    colReorder: true,
    dom: 'lBfrtip',
    buttons: [
      'copy', 'csv', 'pdf', 'colvis'
    ],
    responsive: true,
    processing: true,
    serverSide: true,
    //deferRender: true,
    searchDelay: 500,
    ajax: { 
      url: $('#customer-projects-table').data('source'),
      type: "GET",
      error: function (jqXHR, exception) {
        console.log(jqXHR);
        if (jqXHR.status == 401) {
          window.location.reload();
        } else {
          getErrorMessage(jqXHR, exception);
        }
      }
    },
    pagingType: "full_numbers",
    lengthMenu: [[10, 15, 25, 50, 100, -1], [10, 15, 25, 50, 100, "Wszystkie"]],
    iDisplayLength: -1,
    columns: [
      { "data": "id",
        "visible": false }, 
      { "data": "number" }, 
      { "data": "enrollment" },
      { "data": "status" },
      { "data": "note" },
      { "data": "flat", 
        "sortable": false }
    ],
    preDrawCallback: function( settings ) {
      // jezeli panel nie jest widoczny, to przerwij Å‚adowanie danych
      if ( $( "#collapse_customer_projects" ).is( ":hidden" ) ) {
        return false;
      }
    },
    order: [[ 1, "asc" ]],
    language: {
      buttons: {
        copy: 'Kopiuj',
        colvis: 'Kolumny'
      },
      url: '<%= asset_path("pl.json.erb") %>'
    }
  });


  // jezeli nastepuje wyswietlenie panelu, to zaladuj dane
  $('#collapse_customer_projects').on('shown.bs.collapse', function (){
  //  Wykomentowalem wiersz ponizej poniewaz powoduje podwojne pobieranie danych    
  //  oCustomerProjectstable.ajax.reload();
    oCustomerProjectstable.draw();
  });


});