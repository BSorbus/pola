      { "data": "ww_9" },
      { "data": "ww_10", "width": "100" },
      { "data": "ww_11", "width": "40" },
      { "data": "ww_12", "width": "40" },
      { "data": "ww_13" },
      { "data": "ww_14" },
      { "data": "ww_15" },
      { "data": "ww_16", "width": "120" }
    ],
   preDrawCallback: function( settings ) {
