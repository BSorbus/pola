     if ( $( "#collapse_point_file_ww_points" ).is( ":hidden" ) ) {
       return false;
     }
   },
    order: [[ 1, "asc" ]],
    language: {
      url: '<%= asset_path("pl.json.erb") %>'
    }
  });


