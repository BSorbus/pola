<div class="fields well">
  <div class='row'>
    <div class="form-group col-sm-6">
      <%= f.label :project_id, class: "control-label" %>
      <%= f.hidden_field :project_id,
                        class: "form-control input-sm select2_project", 
                        placeholder: "Wybierz Project",
                        style: "width:100%" %>
      <small class="help-block"><%=t 'help_block_text.select2_project' %></small>
    </div>


    <div class="form-group col-sm-6">
      <%= f.label :role_id, class: 'control-label' %>
      <%= f.select :role_id, 
            Role.only_not_special.all.order(:name).collect {|v| [ "#{v[:name]}", v[:id] ] },
            { include_blank: true }, 
            { autofocus: false, class: 'form-control input-sm', disabled: false } %>
    </div>

    <div class="form-group col-sm-12">
      <%= f.hidden_field :_destroy %>
      <%= link_to "[Remove Accessorization]", '#',
        onClick: "removeField(this); return false;", class: 'remove-link-button btn btn-danger pull-right' %>
    </div>
  </div>
</div>

