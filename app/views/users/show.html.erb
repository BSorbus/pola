<p id="notice"><%= notice %></p>


<div class="container">
  <div class="col-sm-12">
    <div class="row">
      <h3><span class="glyphicon glyphicon-user" aria-hidden="true"> 
        <%= t('pages.user.show.title') %>  
        </span>
      </h3>
    </div> <!--/row -->
    <div class="row">
      <p>
        <strong>Name:</strong>
        <%= @user.name %>
      </p>

      <p>
        <strong>Email:</strong>
        <%= @user.email %>
      </p>

      <br>

      <table class="table table-hover">
        <caption>
          <%= t('pages.user.show.table_caption') %>
        </caption>      
        <thead>
          <tr>
            <th>Project</th>
            <th>User</th>
            <th>As</th>
            <th>Actions</th>
          </tr>
        <thead>
        <tbody>
          <%# @user.accessorizations.each do |accessorization| %>
          <!--Accessorization.joins(:user).includes(:user).where(user: [u1, u2]).order('users.name') -->
          <% Accessorization.includes(:user, :project).
            where(user: @user).order('projects.number').each do |accessorization| %>
            <tr>
              <%= render accessorization %>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div> <!--/row -->
    <br>
    <div class="row">
      <%= link_to 'Edit', edit_user_path(@user) %> |
      <%= link_to 'Back', users_path %>
    </div> <!--/row -->
  </div> <!--/col-sm-12 -->
</div> <!--/coontainer -->

