<div class="panel-group" id="myaccordion">

  <!-- Dane -->
  <div class="row">
    <div class="col-sm-12">
      <div class="panel panel-user">
        <div class="panel-heading">
          <div class="panel-title">
            <a class="accordion-toggle" data-toggle="collapse" data-parent="#myaccordion" href="#collapse_data" >
              <span class="glyphicon glyphicon-user">&nbsp;<%=t "pages.user.show.title"%>:&nbsp;<%= @user.fullname %></span>
              <i class="indicator glyphicon glyphicon-chevron-down  pull-right"></i>
            </a>
          </div> 
        </div>
        <div id="collapse_data" class="panel-collapse collapse in">
          <div class="panel-body">         
            <div class="col-sm-11 col-sm-offset-1">

              <%= render 'data', input_disabled: true %>

            </div> <!--/col-sm-11 col-sm-offset-1-->    
          </div> <!-- /panel-body -->
        </div> <!-- /id="collapse_data" -->
      </div> <!-- /panel -->
    </div> <!-- /col-sm-12-->
  </div> <!-- /row -->

  <!-- Roles-->
  <% if policy(:role).index? %>
    <!-- Roles.whers(special: true)-->
    <div class="row">
      <div class="col-sm-11 col-sm-offset-1">
        <div class="panel panel-role">
          <div class="panel-heading">
            <div class="panel-title">
              <a class="accordion-toggle" data-toggle="collapse" data-parent="#myaccordion" href="#collapse_user_roles" >
                <span class="glyphicon glyphicon-sunglasses">&nbsp;<%= t "pages.role.index.title_special" %></span>
                <i class="indicator glyphicon glyphicon-chevron-right pull-right"></i>
              </a>
            </div>
          </div>
          <div id="collapse_user_roles" class="panel-collapse collapse">
            <div class="panel-body">
              <div class="col-sm-12">

                <%= render 'roles' %>

              </div> <!--/class="col-sm-12" -->
            </div> <!-- /panel-body -->
          </div> <!-- /id="collapse_roles" -->
        </div> <!-- /panel -->
      </div> <!-- /col-sm-11 col-sm-offset-1 -->
    </div> <!-- /row -->
  <% end %>

  <!-- Accessorizations-->
  <% if policy(:accessorization).index? %>
    <!-- Roles.whers(special: false)-->
    <div class="row">
      <div class="col-sm-11 col-sm-offset-1">
        <div class="panel panel-accessorization">
          <div class="panel-heading">
            <div class="panel-title">
              <a class="accordion-toggle" data-toggle="collapse" data-parent="#myaccordion" href="#collapse_user_accessorizations" >
                <span class="glyphicon glyphicon-book">&nbsp;<%= t "pages.accessorization.user_show" %></span>
                <i class="indicator glyphicon glyphicon-chevron-right pull-right"></i>
              </a>
            </div>
          </div>
          <div id="collapse_user_accessorizations" class="panel-collapse collapse">
            <div class="panel-body">
              <div class="col-sm-12">

                <%= render 'accessorizations' %>

              </div> <!--/class="col-sm-12" -->
            </div> <!-- /panel-body -->
          </div> <!-- /id="collapse_roles_notspecial" -->
        </div> <!-- /panel -->
      </div> <!-- /col-sm-11 col-sm-offset-1 -->
    </div> <!-- /row -->
  <% end %>

</div> <!-- /class="panel-group" id="myaccordion" -->
