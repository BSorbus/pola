<div class="container">
  <div class="col-sm-12">
    <div class="row">
      <h3><span class="glyphicon glyphicon-user" aria-hidden="true"> 
        <%= t "pages.user.index.title" %>  
        </span>
      </h3>
      <div class="column">
        <table class="table table-hover">
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <%= render user %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div> <!--/row -->
  </div> <!--/col-sm-12 -->
  <div class="col-sm-12">
    <div class="row">
      <% if true %> <!--policy(:user).new? %> -->
        <%#= link_to t('New', default: t("helpers.links.new")), new_user_path, 
                            :class => 'btn btn-primary glyphicon glyphicon-plus pull-right' %> 
      <% end %>
    </div> <!--/row -->
  </div> <!--/col-sm-12 -->
</div> <!--/coontainer -->
