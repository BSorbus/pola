<div class="container">
  <div class="col-sm-12">
    <div class="row">
      <h3><span class="glyphicon glyphicon-book" aria-hidden="true"> 
        <%= t('pages.project.show.title') %>  
        </span>
      </h3>
    </div> <!--/row -->
  </div> <!--/col-sm-12 -->

  <div class="col-sm-12">
    <hr>
  </div>

  <div class="col-sm-6">
    <div class="row">
      <div class="form-group col-sm-12">
        <strong><%= Project.human_attribute_name('number') %></strong><br>
        <%= @project.number %>
      </div>
      <div class="form-group col-sm-12">
        <strong><%= Project.human_attribute_name('project_status_id') %></strong><br>
        <%= @project.project_status.try(:name) %>
      </div>
      <div class="form-group col-sm-12">
        <strong><%= Project.human_attribute_name('customer_id') %></strong><br>
        <%= @project.customer.try(:name) %>
      </div>
    </div>
  </div> <!--/col-sm-6 -->


  <div class="col-sm-6">
    <div class="row">
      <div class="form-group col-sm-12">
        <strong><%= Project.human_attribute_name('note') %></strong><br>
        <%= @project.note %>
      </div>
    </div>
  </div> <!--/col-sm-6 -->

  <div class="col-sm-12">
    <hr>
  </div>

  <div class="col-sm-12">
    <div class="row">
      <div class="col-sm-12">
        <table class="table table-hover">
          <caption>
            <%= t('pages.project.show.table_caption') %>
          </caption>      
          <thead>
            <tr>
              <th>User</th>
              <th>Role</th>
            </tr>
          <thead>
          <tbody>
            <%# @project.accessorizations.each do |accessorization| %>
            <% Accessorization.includes(:user, :project).where(project: @project).order('users.name').each do |accessorization| %>
              <tr>
                <%= render 'accessorization', accessorization: accessorization %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div> <!--/col-sm-12 -->
    </div> <!--/row -->
  </div>

  <div class="col-sm-12">
    <hr>
  </div>

  <div class="col-sm-12">
    <div class="row">
      <%= link_to 'Edit', edit_project_path(@project), class: 'btn btn-default' %>
      <%= link_to 'Index', projects_path, class: 'btn btn-default' %>
    </div> <!--/row -->
  </div> <!--/col-sm-12 -->

</div> <!--/coontainer -->

