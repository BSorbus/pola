<div class="panel-group" id="myaccordion">

  <!-- Dane -->
  <div class="row">
    <div class="col-sm-12">
      <div class="panel panel-project">
        <div class="panel-heading">
          <div class="panel-title">
            <a class="accordion-toggle" data-toggle="collapse" data-parent="#myaccordion" href="#collapse_data" >
              <span class="glyphicon glyphicon-book">&nbsp;<%=t "pages.project.show.title" %>:&nbsp;<%= @project.fullname %></span>
              <i class="indicator glyphicon glyphicon-chevron-down  pull-right"></i>
            </a>
          </div> 
        </div>
        <div id="collapse_data" class="panel-collapse collapse in">
          <div class="panel-body">         

            <%= render 'data', input_disabled: true %>

          </div> <!-- /panel-body -->
        </div> <!-- /id="collapse_data" -->
      </div> <!-- /panel -->
    </div> <!-- /col-sm-12-->
  </div> <!-- /row -->


  <!-- Attachments for this project-->
  <% if policy(:attachment).project_index? %>
    <%= render 'attachments/attachments_in_panel', attachmenable: @project %>
  <% end %>


  <!-- PointFiles-->
  <% if policy(:point_file).index? %>
    <div class="row">
      <div class="col-sm-11 col-sm-offset-1">
        <div class="panel panel-point-file">
          <div class="panel-heading">
            <div class="panel-title">
              <a class="accordion-toggle" data-toggle="collapse" data-parent="#myaccordion" href="#collapse_point_files" >
                <span class="glyphicon glyphicon-file">&nbsp;<%= t "pages.point_file.index.title" %></span>
                <i class="indicator glyphicon glyphicon-chevron-right pull-right"></i>
              </a>
            </div>
          </div>
          <div id="collapse_point_files" class="panel-collapse collapse">
            <div class="panel-body">

              <%= render 'point_files' %>

            </div> <!-- /panel-body -->
          </div> <!-- /id="collapse_point_files" -->
        </div> <!-- /panel -->
      </div> <!-- /col-sm-11 col-sm-offset-1 -->
    </div> <!-- /row -->
  <% end %>


  <!-- Events-->
  <% if policy(:event).index? %>
    <!-- Roles.whers(special: false)-->
    <div class="row">
      <div class="col-sm-11 col-sm-offset-1">
        <div class="panel panel-event">
          <div class="panel-heading">
            <div class="panel-title">
              <a class="accordion-toggle" data-toggle="collapse" data-parent="#myaccordion" href="#collapse_events" >
                <span class="glyphicon glyphicon-calendar">&nbsp;<%= t "pages.event.index.title" %></span>
                <i class="indicator glyphicon glyphicon-chevron-right pull-right"></i>
              </a>
            </div>
          </div>
          <div id="collapse_events" class="panel-collapse collapse">
            <div class="panel-body">

              <%= render 'events' %>

            </div> <!-- /panel-body -->
          </div> <!-- /id="collapse_events" -->
        </div> <!-- /panel -->
      </div> <!-- /col-sm-11 col-sm-offset-1 -->
    </div> <!-- /row -->
  <% end %>

  <!-- Opinions-->
  <% if true %> <!-- #policy(:opinion).index? %> -->
    <div class="row">
      <div class="col-sm-11 col-sm-offset-1">
        <div class="panel panel-opinion">
          <div class="panel-heading">
            <div class="panel-title">
              <a class="accordion-toggle" data-toggle="collapse" data-parent="#myaccordion" href="#collapse_opinions" >
                <span class="glyphicon glyphicon-list-alt">&nbsp;<%= t "pages.opinion.index.title" %></span>
                <i class="indicator glyphicon glyphicon-chevron-right pull-right"></i>
              </a>
            </div>
          </div>
          <div id="collapse_opinions" class="panel-collapse collapse">
            <div class="panel-body">

              <%= render 'opinions' %>

            </div> <!-- /panel-body -->
          </div> <!-- /id="collapse_opinions" -->
        </div> <!-- /panel -->
      </div> <!-- /col-sm-11 col-sm-offset-1 -->
    </div> <!-- /row -->
  <% end %>

</div> <!-- /class="panel-group" id="myaccordion" -->
