<div class="row">
  <div class="col-sm-12">
    <div class="row">
      <h3 class="center">
        <span class="glyphicon glyphicon-book" aria-hidden="true"></span>
        <span><%= t "pages.project.index.title" %></span>
      </h3>
    </div> <!--/row -->
  </div> <!--/col-sm-12 -->

  <div class="col-sm-12">
    <table id="projects-table" class="hover cell-border" cellspacing="0" width="100%", data-source="<%= datatables_index_projects_path(format: :json) %>">
      <thead>
        <tr>
          <th>id</th>
          <th class='col-sm-2'><%= Project.human_attribute_name(:number) %></th>
          <th class='col-sm-2'><%= Project.human_attribute_name(:project_status_id) %></th>
          <th class='col-sm-2'><%= Project.human_attribute_name(:note) %></th>
          <th class='col-sm-2'><%= Project.human_attribute_name(:customer_id) %></th>
          <th class='col-sm-4'><%= Project.human_attribute_name(:flat_assigned_events) %></th>
        </tr>
      </thead>
      <tbody>
        <!-- data from ajax -->
      </tbody>
    </table>
  </div> <!--/col-sm-12 -->


  <div class="col-sm-12">
    <div class="row">
      <% if policy(:project).new? %> 
        <%= link_to new_project_path, class: "btn btn-primary pull-right" do %>
          <span class="glyphicon glyphicon-plus"></span>
          <%= t("helpers.links.new") %>
        <% end %>
      <% end %>
    </div> <!--/row -->
  </div> <!--/col-sm-12 -->
</div> <!--/row -->
