<div class="col-sm-12">
  <table class="table table-hover">
    <thead>
      <tr>
        <th class="col-sm-2"><%= Point.human_attribute_name(:load_date) %></th>
        <th class="col-sm-7"><%= Point.human_attribute_name(:load_file) %></th>
        <th class="col-sm-2"><%= Point.human_attribute_name(:status) %></th>
        <th class="col-sm-1"></th>
      </tr>
    <thead>
    <tbody>
      <% @project.points.order(id: :desc).each do |point| %>
        <tr>
          <td>
            <%= point.try(:load_date) %>
          </td>
          <td>
            <%= point.try(:load_file) %>
          </td>
          <td>
            <%= point.try(:status) %>
          </td>
        </tr>
      <% end %>
     </tbody>
  </table>

</div>
