<div class="fields well-accessorization">
  <div class='row'>
    <div class="form-group col-sm-6">
      <%= f.label :user_id, class: 'control-label' %>
      <%= f.select :user_id, 
            User.all.order(:name).collect {|v| [ "#{v[:name]}", v[:id] ] },
            { include_blank: true }, 
            { autofocus: false, class: 'form-control input-sm', disabled: false } %>
    </div>

    <div class="form-group col-sm-6">
      <%= f.label :role_id, class: 'control-label' %>
      <%= f.select :role_id, 
            Role.only_not_special.all.order(:name).collect {|v| [ "#{v[:name]}", v[:id] ] },
            { include_blank: true }, 
            { autofocus: false, class: 'form-control input-sm', disabled: false } %>
    </div>

    <div class="form-group col-sm-12">
      <%= f.hidden_field :_destroy %>
      <%= link_to "[Remove Accessorization]", '#',
        onClick: "removeField(this); return false;", class: 'remove-link-button btn btn-danger pull-right' %>
    </div>
  </div>
</div>

