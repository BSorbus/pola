<% BusinessTripStatus.order(:step).each do |row| %>

  <%= link_to status_update_business_trip_path(@business_trip, business_trip: {business_trip_status_id: "#{row.id}"} ), 
        method: :patch, class: "#{@business_trip.business_trip_status_left_button_class(row.step)}" do %>
