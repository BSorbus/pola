<div class="panel-group" id="myaccordion">

  <!-- Dane -->
  <div class="row">
    <div class="col-sm-12">
      <div class="panel panel-business-trip">
        <a class="accordion-toggle" data-toggle="collapse" data-parent="#myaccordion" href="#collapse_data" >
          <div class="panel-heading">
            <div class="panel-title">
              <span class="glyphicon glyphicon-list-alt">&nbsp;</span>
              <span><%=t "pages.business_trip.show.title"%>:&nbsp;<strong><%= @business_trip.fullname %></strong>&nbsp;&nbsp;&nbsp;[<%= @business_trip.business_trip_status_info %>]</span>
              <i class="indicator glyphicon glyphicon-chevron-down  pull-right"></i>
            </div> 
          </div>
        </a>
        <div id="collapse_data" class="panel-collapse collapse in">
          <div class="panel-body">         

            <%= render 'data', input_disabled: true %>

          </div> <!-- /panel-body -->
        </div> <!-- /id="collapse_data" -->
      </div> <!-- /panel -->
    </div> <!-- /col-sm-12-->
  </div> <!-- /row -->


  <!-- Flows-->
  <div class="row">
    <div class="col-sm-11 col-sm-offset-1">
      <div class="panel panel-proposal-file">
        <a class="accordion-toggle" data-toggle="collapse" data-parent="#myaccordion" href="#collapse_flows" >
          <div class="panel-heading">
            <div class="panel-title">
              <span class="glyphicon glyphicon-file">&nbsp;</span>
              <span><%= t "pages.flow.index.title" %></span>
              <i class="indicator glyphicon glyphicon-chevron-right pull-right"></i>
            </div>
          </div>
        </a>
        <div id="collapse_flows" class="panel-collapse collapse">
          <div class="panel-body">

            <%= render 'flows' %>

          </div> <!-- /panel-body -->
        </div> <!-- /id="collapse_flows" -->
      </div> <!-- /panel -->
    </div> <!-- /col-sm-11 col-sm-offset-1 -->
  </div> <!-- /row -->


</div> <!-- /class="panel-group" id="myaccordion" -->
