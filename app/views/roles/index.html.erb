<div class="row">
  <div class="col-sm-12">
    <div class="row">
      <h3><span class="glyphicon glyphicon-sunglass" aria-hidden="true"> 
        <%= t "pages.role.index.title" %>  
        </span>
      </h3>
    </div> <!--/row -->
  </div> <!--/col-sm-12 -->

  <div class="col-sm-12">
    <table id="roles-table" class="hover cell-border" cellspacing="0" width="100%", data-source="<%= datatables_index_roles_path(format: :json) %>">
      <thead>
        <tr>
          <th>id</th>
          <th class='col-sm-3'><%= Role.human_attribute_name(:name) %></th>
          <th class='col-sm-1'><%= Role.human_attribute_name(:special) %></th>
          <th class='col-sm-4'><%= Role.human_attribute_name(:note) %></th>
          <th class='col-sm-4'><%= Role.human_attribute_name(:activities) %></th>
        </tr>
      </thead>
      <tbody>
        <!-- data from ajax -->
      </tbody>
    </table>
  </div> <!--/col-sm-12 -->


  <div class="col-sm-12">
    <div class="row">
      <% if policy(:role).new? %>
        <%= link_to t('New', default: t("helpers.links.new")), new_role_path, 
                            :class => 'btn btn-primary glyphicon glyphicon-plus pull-right' %> 
      <% end %>
    </div> <!--/row -->
  </div> <!--/col-sm-12 -->
</div> <!--/row -->
