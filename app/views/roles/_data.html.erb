<div class="col-sm-11 col-sm-offset-1">
  <% input_disabled ||= false  
     #if input_disabled is not passed to the partial it doesn't crash. 
     # We default it to false 
  %>

  <%= form_errors_for @role %>

  <div class="row">
    <div class="col-sm-6">
      <div class="row">

        <div class="form-group col-sm-12">
          <p><strong><%= Role.human_attribute_name(:name) %></strong></p>
          <%= @role.name %>
        </div>

        <div class="form-group col-sm-12">
          <p><strong><%= Role.human_attribute_name(:special) %></strong></p>
          <%= t @role.special %>
        </div>

      </div>  <!-- /row -->
    </div>  <!-- /col-sm-6 -->

    <div class="col-sm-6">
      <div class="row">
        <div class="form-group col-sm-12">
          <p><strong><%= Role.human_attribute_name(:note) %></strong></p>
          <%= @role.note.gsub("\r\n", "<br>").html_safe %>
        </div>
      </div>
    </div> <!--/col-sm-6 -->
  </div>  <!-- /row -->

  <div class="row">
    <div class="col-sm-12">
      <div class="row">

        <div class="form-group col-sm-12">
          <p><strong><%= Role.human_attribute_name(:activities) %></strong></p>
          <%= @role.activities %>
        </div>

      </div> <!-- /row -->
    </div> <!--/col-sm-12 -->
  </div>  <!-- /row -->

  <hr class="hr-without-top-margin">

  <% if input_disabled %>
    <!-- for "Show" -->
    <div class="row">
      <%= link_to t('Index', default: t("helpers.links.index")), roles_path, :class => 'btn btn-default glyphicon glyphicon-th-list' %>

      <% if policy(@role).destroy? %>
        <%= link_to t('Delete', default: t("helpers.links.destroy")), role_path(@role),
                            method: :delete,
                            data: { confirm: t('helpers.links.confirm_destroy', data: @role.name) }, 
                            :class => "btn btn-danger glyphicon glyphicon-trash" %>
      <% end %>

      <% if policy(@role).edit? %>
        <%= link_to t('Edit', default: t("helpers.links.edit")), edit_role_path(@role), 
                        :class => "btn btn-primary glyphicon glyphicon-edit" %>  

      <% end %>

    </div> <!-- /row -->
  <% else %>
    <!-- form "New"/"Edit" -->
  <% end %>

</div> <!--/col-sm-11 col-sm-offset-1-->    
