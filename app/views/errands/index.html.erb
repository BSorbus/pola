<div class="row">
  <div class="col-sm-12">
    <div class="row">
      <h3 class="center">
        <span class="glyphicon glyphicon-tasks glyp-index-title" aria-hidden="true"></span>
        <span class="index-title"><%= t "pages.errand.index.title" %></span>
      </h3>
    </div> <!--/row -->
  </div> <!--/col-sm-12 -->

  <div class="col-sm-12">
    <%= render partial: "filtr" %>
  </div> <!--/col-sm-12 -->

  <div class="col-sm-12">
    <table id="errands-table" class="hover cell-border" cellspacing="0" width="100%", data-source="<%= datatables_index_errands_path(format: :json) %>">
      <thead>
        <tr>
          <th>id</th>
          <th><%= Errand.human_attribute_name(:number) %></th>
          <th><%= Errand.human_attribute_name(:order_date) %></th>
          <th><%= Errand.human_attribute_name(:principal) %></th>
          <th><%= Errand.human_attribute_name(:adoption_date) %></th>
          <th><%= Errand.human_attribute_name(:start_date) %></th>
          <th><%= Errand.human_attribute_name(:end_date) %></th>
          <th><%= Errand.human_attribute_name(:errand_status_id) %></th>
        </tr>
      </thead>
      <tbody>
        <!-- data from ajax -->
      </tbody>
    </table>
  </div> <!--/col-sm-12 -->


  <div class="col-sm-12">
    <% if policy(:errand).new? %>
      <%= link_to new_errand_path, class: "btn btn-primary pull-right" do %>
        <span class="glyphicon glyphicon-plus"></span>
        <%= t("helpers.links.new") %>
      <% end %>
    <% end %>
  </div> <!--/col-sm-12 -->
</div> <!--/row -->

