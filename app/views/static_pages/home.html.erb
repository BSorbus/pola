<% content_for :upper_part_page do %>

  <!-- Half Page Image Background Carousel Header -->
  <div id="myCarousel" class="carousel slide">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for Slides -->
    <div class="carousel-inner">
        <div class="item active">
          <!-- show video -->
          <div class="view hidden-xs visible-sm-* visible-md-* visible-lg-*">
            <video class="video-full fill" autoplay loop muted>
              <source src="<%= asset_path('1.mp4') %>" type="video/mp4" />
            </video>
          </div>
          <!-- show jpg -->
          <div class="visible-xs-* hidden-sm hidden-md hidden-lg fill" style="background-image:url(<%= asset_path '1.jpg' %>)"></div>
          <div class="carousel-caption">
            <h3>UKE</h3>
            <p>Urząd Komunikacji Elektronicznej</p>
          </div>
        </div>
        <div class="item">
          <div class="view hidden-xs visible-sm-* visible-md-* visible-lg-*">
            <video class="video-full fill" autoplay loop muted>
              <source src="<%= asset_path('2.mp4') %>" type="video/mp4" />
            </video>
          </div>
          <!-- show jpg -->
          <div class="visible-xs-* hidden-sm hidden-md hidden-lg fill" style="background-image:url(<%= asset_path '2.jpg' %>)"></div>
          <div class="carousel-caption">
            <h3>POLA</h3>
            <p><strong>P</strong>rogram <strong>O</strong>peracyjny Po<strong>L</strong>ska Cyfrow<strong>A</strong></p>
          </div>
        </div>
        <div class="item">
          <div class="view hidden-xs visible-sm-* visible-md-* visible-lg-*">
            <video class="video-full fill" autoplay loop muted>
              <source src="<%= asset_path('3.mp4') %>" type="video/mp4" />
            </video>
          </div>
          <!-- show jpg -->
          <div class="visible-xs-* hidden-sm hidden-md hidden-lg fill" style="background-image:url(<%= asset_path '3.jpg' %>)"></div>
          <div class="carousel-caption">
            <h3>Czas na wykorzystanie nowoczesnych technologii</h3>
            <p>Dostęp do danych przez przeglądarkę bez konieczności instalowania programu i kłopotliwych aktualizacji</p>
          </div>

        </div>
      </div> <!-- /div class="carousel-inner" -->

      <!-- Controls -->
      <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="icon-prev"></span>
      </a>
      <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="icon-next"></span>
      </a>

  </div>


  <!-- Script to Activate the Carousel -->
  <script>
  $('.carousel').carousel({
      interval: 7000 //changes the speed
  });
  </script>

<% end %><!--/ content_for :upper_part_page -->

<div class="col-sm-6 col-sm-offset-3">
  <%= image_tag("logo_uke_orzel.png", :class => "img img-responsive" ) %> 
</div>
