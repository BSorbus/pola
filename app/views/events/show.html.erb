<div class="panel-group" id="myaccordion">

  <!-- Dane -->
  <div class="row">
    <div class="col-sm-12">
      <div class="panel panel-event">
        <div class="panel-heading">
          <div class="panel-title">
            <a class="accordion-toggle" data-toggle="collapse" data-parent="#myaccordion" href="#collapse_data" >
              <span class="glyphicon glyphicon-calendar">&nbsp;</span>
              <span><%=t "pages.event.show.title" %>:&nbsp;<%= @event.fullname %></span>
              <i class="indicator glyphicon glyphicon-chevron-down  pull-right"></i>
            </a>
          </div> 
        </div>
        <div id="collapse_data" class="panel-collapse collapse in">
          <div class="panel-body">         

            <%= render 'data', input_disabled: true %>

          </div> <!-- /panel-body -->
        </div> <!-- /id="collapse_data" -->
      </div> <!-- /panel -->
    </div> <!-- /col-sm-12-->
  </div> <!-- /row -->

  <!-- Attachments for this project-->
  <% if policy(:attachment).event_index? %>
    <%= render 'attachments/attachments_in_panel', attachmenable: @event %>
  <% end %>

  <!-- Accessorizations-->
  <% if policy(:accessorization).index? %>
    <div class="row">
      <div class="col-sm-11 col-sm-offset-1">
        <div class="panel panel-accessorization">
          <div class="panel-heading">
            <div class="panel-title">
              <a class="accordion-toggle" data-toggle="collapse" data-parent="#myaccordion" href="#collapse_accessorizations" >
                <span class="glyphicon glyphicon-user">&nbsp;</span>
                <span><%= t "pages.accessorization.event_show" %></span>
                <i class="indicator glyphicon glyphicon-chevron-right pull-right"></i>
              </a>
            </div>
          </div>
          <div id="collapse_accessorizations" class="panel-collapse collapse">
            <div class="panel-body">

              <%= render 'accessorizations' %>

            </div> <!-- /panel-body -->
          </div> <!-- /id="collapse_accessorizations" -->
        </div> <!-- /panel -->
      </div> <!-- /col-sm-11 col-sm-offset-1 -->
    </div> <!-- /row -->
  <% end %>

  <!-- Comments-->
  <% if policy(:comment).index? %>
    <!-- Roles.whers(special: false)-->
    <div class="row">
      <div class="col-sm-11 col-sm-offset-1">
        <div class="panel panel-comment">
          <div class="panel-heading">
            <div class="panel-title">
              <a class="accordion-toggle" data-toggle="collapse" data-parent="#myaccordion" href="#collapse_comments" >
                <span class="glyphicon glyphicon-comment">&nbsp;</span>
                <span><%= t "pages.comment.index.title" %></span>
                <i class="indicator glyphicon glyphicon-chevron-right pull-right"></i>
              </a>
            </div>
          </div>
          <div id="collapse_comments" class="panel-collapse collapse">
            <div class="panel-body">

              <%= render 'comments' %>

            </div> <!-- /panel-body -->
          </div> <!-- /id="collapse_comments" -->
        </div> <!-- /panel -->
      </div> <!-- /col-sm-11 col-sm-offset-1 -->
    </div> <!-- /row -->
  <% end %>

  <!-- Opinions-->
  <% if true %> <!-- # event_type == && policy(:opinion).index? %> -->
    <div class="row">
      <div class="col-sm-11 col-sm-offset-1">
        <div class="panel panel-opinion">
          <div class="panel-heading">
            <div class="panel-title">
              <a class="accordion-toggle" data-toggle="collapse" data-parent="#myaccordion" href="#collapse_opinions" >
                <span class="glyphicon glyphicon-list-alt">&nbsp;</span>
                <span><%= t "pages.opinion.index.title" %></span>
                <i class="indicator glyphicon glyphicon-chevron-right pull-right"></i>
              </a>
            </div>
          </div>
          <div id="collapse_opinions" class="panel-collapse collapse">
            <div class="panel-body">

              <%#= render 'opinions' %>

            </div> <!-- /panel-body -->
          </div> <!-- /id="collapse_opinions" -->
        </div> <!-- /panel -->
      </div> <!-- /col-sm-11 col-sm-offset-1 -->
    </div> <!-- /row -->
  <% end %>

</div> <!-- /class="panel-group" id="myaccordion" -->
