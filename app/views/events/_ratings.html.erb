<div class="col-sm-12">
  <table class="table table-hover">
    <thead>
      <tr>
        <th class="col-sm-7"><%= Rating.human_attribute_name(:fullname) %></th>
        <th class="col-sm-3"><%= Rating.human_attribute_name(:user_id) %></th>
        <th class="col-sm-2"><%= Rating.human_attribute_name(:updated_at) %></th>
      </tr>
    <thead>
    <tbody>
      <% @event.ratings.each do |rating| %>
        <tr>
          <td>
            <%= link_to rating.fullname, event_rating_path(@event, rating)  %>
          </td>
          <td>
            <%= rating.user.try(:name_as_link) %>
          </td>
          <td>
            <%= rating.updated_at.strftime("%Y-%m-%d %H:%M:%S") %>
          </td>
        </tr>
      <% end %>
     </tbody>
  </table>

</div>

<div class="col-sm-12">
  <% if true %> <!-- #policy(:rating).new? %> -->
    <%= link_to new_event_rating_path(@event), class: "btn btn-primary pull-right" do %>
      <span class="glyphicon glyphicon-plus"></span>
      <%= t("helpers.links.new") %>
    <% end %>
  <% end %>
</div> <!--/col-sm-12 -->
