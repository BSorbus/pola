<%= form_with(model: customer, local: true) do |f| %>
<%#= form_for customer do |f| %>

  <%= form_errors_for customer %>

  <div class="container">
    <div class="col-sm-12">
      <div class="row">
        <h3><span class="glyphicon glyphicon-flag" aria-hidden="true"> 
          <%= t('pages.customer.show.title') %>  
          </span>
        </h3>
      </div> <!--/row -->
    </div> <!--/col-sm-12 -->

    <div class="col-sm-12">
      <hr>
    </div>

    <div class="col-sm-6">
      <div class="row">
        <div class="form-group col-sm-12">
          <%= f.label :name, class: 'control-label' %>
          <%= f.text_field :name, autofocus: true, class: 'form-control input-sm', disabled: false %>
        </div>

      </div> <!--/row -->
    </div> <!--/col-sm-6 -->


    <div class="col-sm-6">
      <div class="row">
        <div class="form-group col-sm-12">
          <%= f.label :note, class: 'control-label' %>
          <%= f.text_area :note, :rows => 5, class: 'form-control input-sm', disabled: false %>
        </div>
      </div> <!--/row -->
    </div> <!--/col-sm-6 -->

    <div class="col-sm-12">
      <hr>
    </div> <!--/col-sm-12 -->

    <div class="col-sm-12">
      <hr>
    </div>

    <div class="col-sm-12">
      <div class="row">
        <%= f.submit nil, :class => 'btn btn-primary' %>
        <%#= link_to 'Show', customer_path(customer), :class => "btn btn-default" %>
        <%= link_to 'Index', customers_path, :class => "btn btn-default" %>
      </div> <!--/row -->
    </div> <!--/col-sm-12 -->
  </div> <!--/container -->

<% end %>
