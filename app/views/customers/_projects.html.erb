<div class="col-sm-12">
  <table class="table table-hover">
    <thead>
      <tr>
        <th><%= Project.human_attribute_name('number') %></th>
      </tr>
    <thead>
    <tbody>
      <% Project.where(customer: @customer).order(:number).each do |project| %>
        <tr>
          <td>
            <%= project.try(:number_as_link) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
