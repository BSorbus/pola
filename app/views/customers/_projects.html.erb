<div class="col-sm-12">
  <table class="table table-hover">
    <thead>
      <tr>
        <th class="col-sm-3"><%= Project.human_attribute_name(:number) %></th>
        <th class="col-sm-3"><%= Project.human_attribute_name(:project_status_id) %></th>
        <th class="col-sm-6"><%= Project.human_attribute_name(:flat_assigned_events) %></th>
      </tr>
    <thead>
    <tbody>
      <% Project.where(customer: @customer).order(:number).each do |project| %>
        <tr>
          <td>
            <%= link_to project.try(:number), project_path(project) %>
          </td>
          <td>
            <%= project.project_status.try(:name) %>
          </td>
          <td>
            <%= project.try(:flat_assigned_events) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
