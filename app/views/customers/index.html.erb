<div class="container">
  <div class="col-sm-12">
    <div class="row">
      <h3><span class="glyphicon glyphicon-book" aria-hidden="true"> 
        <%= t "pages.customer.index.title" %>  
        </span>
      </h3>
    </div> <!--/row -->
  </div> <!--/col-sm-12 -->


  <div class="col-sm-12">
    <table id="customers-table" class="hover cell-border" cellspacing="0" width="100%", data-source="<%= datatables_index_customers_path(format: :json) %>">
      <thead>
        <tr>
          <th>id</th>
          <th><%= Customer.human_attribute_name('name') %></th>
          <th><%= Customer.human_attribute_name('flat_assigned_projects') %></th>
        </tr>
      </thead>
      <tbody>
        <!-- data from ajax -->
      </tbody>
    </table>
  </div> <!--/col-sm-12 -->


  <div class="col-sm-12">
    <div class="row">
      <% if true %> <!--policy(:customer).new? %> -->
        <%= link_to t('New', default: t("helpers.links.new")), new_customer_path, 
                            :class => 'btn btn-primary glyphicon glyphicon-plus pull-right' %> 
      <% end %>
    </div> <!--/row -->
  </div> <!--/col-sm-12 -->
</div> <!--/coontainer -->
