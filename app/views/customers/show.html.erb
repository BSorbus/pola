<div class="panel-group" id="myaccordion">

  <!-- Dane -->
  <div class="row">
    <div class="col-sm-12">
      <div class="panel panel-customer">
        <div class="panel-heading">
          <div class="panel-title">
            <a class="accordion-toggle" data-toggle="collapse" data-parent="#myaccordion" href="#collapse_data" >
              <span class="glyphicon glyphicon-flag">&nbsp;<%=t "pages.customer.show.title"%>:&nbsp;<%= @customer.fullname %></span>
              <i class="indicator glyphicon glyphicon-chevron-down  pull-right"></i>
            </a>
          </div> 
        </div>
        <div id="collapse_data" class="panel-collapse collapse in">
          <div class="panel-body">         
            <div class="col-sm-11 col-sm-offset-1">

              <%= render 'data', input_disabled: true %>

            </div> <!--/col-sm-11 col-sm-offset-1-->    
          </div> <!-- /panel-body -->
        </div> <!-- /id="collapse_data" -->
      </div> <!-- /panel -->
    </div> <!-- /col-sm-12-->
  </div> <!-- /row -->

  <!-- Projects-->
  <% if policy(:project).index? %>
    <!-- Roles.whers(special: false)-->
    <div class="row">
      <div class="col-sm-11 col-sm-offset-1">
        <div class="panel panel-project">
          <div class="panel-heading">
            <div class="panel-title">
              <a class="accordion-toggle" data-toggle="collapse" data-parent="#myaccordion" href="#collapse_customer_projects" >
                <span class="glyphicon glyphicon-book">&nbsp;<%= t "pages.accessorization.customer_show" %></span>
                <i class="indicator glyphicon glyphicon-chevron-right pull-right"></i>
              </a>
            </div>
          </div>
          <div id="collapse_customer_projects" class="panel-collapse collapse">
            <div class="panel-body">
              <div class="col-sm-12">

                <%= render 'projects' %>

              </div> <!--/class="col-sm-12" -->
            </div> <!-- /panel-body -->
          </div> <!-- /id="collapse_customer_projects" -->
        </div> <!-- /panel -->
      </div> <!-- /col-sm-11 col-sm-offset-1 -->
    </div> <!-- /row -->
  <% end %>

</div> <!-- /class="panel-group" id="myaccordion" -->
